<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View -->
    <record id="partner_technology_tag_view_list" model="ir.ui.view">
        <field name="name">partner.technology.tag.list</field>
        <field name="model">partner.technology.tag</field>
        <field name="arch" type="xml">
            <list string="Tags de Tecnología" editable="bottom">
                <field name="name"/>
                <field name="tech_category"/>
                <field name="tech_match_pattern"/>
                <field name="color" widget="color_picker"/>
                <field name="partner_count"/>
                <field name="active" column_invisible="True"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="partner_technology_tag_view_form" model="ir.ui.view">
        <field name="name">partner.technology.tag.form</field>
        <field name="model">partner.technology.tag</field>
        <field name="arch" type="xml">
            <form string="Tag de Tecnología">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" placeholder="Nombre de la tecnología"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="tech_category"/>
                            <field name="color" widget="color_picker"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="tech_match_pattern" placeholder="keyword1,keyword2,..."/>
                            <field name="partner_count"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Clientes" name="partners">
                            <field name="partner_ids" nolabel="1">
                                <list>
                                    <field name="name"/>
                                    <field name="city"/>
                                    <field name="country_id"/>
                                    <field name="phone"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="partner_technology_tag_view_search" model="ir.ui.view">
        <field name="name">partner.technology.tag.search</field>
        <field name="model">partner.technology.tag</field>
        <field name="arch" type="xml">
            <search string="Tags de Tecnología">
                <field name="name"/>
                <filter name="dispositivo_skymedic" string="Dispositivos Skymedic"
                        domain="[('tech_category', '=', 'dispositivo_skymedic')]"/>
                <filter name="aparatologia" string="Aparatología"
                        domain="[('tech_category', '=', 'aparatologia')]"/>
                <filter name="equipo_medico" string="Equipos Médicos"
                        domain="[('tech_category', '=', 'equipo_medico')]"/>
                <filter name="manipulo" string="Manipulos"
                        domain="[('tech_category', '=', 'manipulo')]"/>
                <separator/>
                <filter name="group_category" string="Categoría" context="{'group_by': 'tech_category'}"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_partner_technology_tag" model="ir.actions.act_window">
        <field name="name">Tags de Tecnología</field>
        <field name="res_model">partner.technology.tag</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_group_category': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear un tag de tecnología
            </p>
            <p>
                Los tags de tecnología se asignan automáticamente a los contactos
                según su historial de compras.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem
        id="menu_partner_technology_tag"
        name="Tags de Tecnología"
        parent="contacts.menu_contacts"
        action="action_partner_technology_tag"
        sequence="10"
    />

</odoo>
