<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Smart buttons on stock.picking form -->
    <record id="view_picking_form_shipping" model="ir.ui.view">
        <field name="name">stock.picking.form.shipping.management</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="action_view_shipments"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-truck"
                        invisible="shipment_count == 0">
                    <field name="shipment_count" widget="statinfo"
                           string="EnvÃ­os"/>
                </button>
                <button name="action_download_shipping_label"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-download"
                        invisible="shipment_count == 0">
                    <span class="o_stat_text">Etiqueta</span>
                </button>
                <button name="action_compare_carriers"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-balance-scale"
                        invisible="carrier_tracking_ref or state != 'done'">
                    <span class="o_stat_text">Comparar</span>
                </button>
            </div>
        </field>
    </record>

</odoo>
