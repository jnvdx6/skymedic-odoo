<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_shipping_batch_wizard_form" model="ir.ui.view">
        <field name="name">shipping.batch.wizard.form</field>
        <field name="model">shipping.batch.wizard</field>
        <field name="arch" type="xml">
            <form string="Operaciones masivas de envÃ­os">
                <group>
                    <field name="action_type"/>
                    <field name="shipment_ids" widget="many2many_tags"/>
                </group>
                <footer>
                    <button name="action_execute"
                            string="Ejecutar"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_shipping_batch_wizard" model="ir.actions.act_window">
        <field name="name">Operaciones masivas</field>
        <field name="res_model">shipping.batch.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
