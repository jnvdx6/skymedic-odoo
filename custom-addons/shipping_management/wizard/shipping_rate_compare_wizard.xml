<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_shipping_rate_compare_wizard_form" model="ir.ui.view">
        <field name="name">shipping.rate.compare.wizard.form</field>
        <field name="model">shipping.rate.compare.wizard</field>
        <field name="arch" type="xml">
            <form string="Comparar tarifas de transportistas">
                <group>
                    <field name="picking_id" readonly="1"/>
                </group>
                <field name="line_ids">
                    <list editable="bottom" create="0" delete="0"
                          decoration-muted="error">
                        <field name="is_selected"/>
                        <field name="carrier_id"/>
                        <field name="carrier_type"/>
                        <field name="price" decoration-bf="1"/>
                        <field name="delivery_days"/>
                        <field name="warning" optional="show"/>
                        <field name="error" optional="show"/>
                    </list>
                </field>
                <footer>
                    <button name="action_select_carrier"
                            string="Asignar seleccionado"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
