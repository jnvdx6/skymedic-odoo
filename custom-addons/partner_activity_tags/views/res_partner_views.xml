<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Add activity tags to partner form -->
    <record id="view_partner_form_activity_tags" model="ir.ui.view">
        <field name="name">res.partner.form.activity.tags</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="priority">51</field>
        <field name="arch" type="xml">
            <field name="category_id" position="after">
                <label for="activity_tag_ids"/>
                <div class="d-flex align-items-center gap-2">
                    <field name="activity_tag_ids" widget="many2many_tags"
                           options="{'color_field': 'color'}"
                           placeholder="Actividad de compra..."
                           class="flex-grow-1"/>
                    <button name="action_recompute_activity_tags" type="object"
                            string="âŸ³" title="Actualizar actividad desde historial de ventas"
                            class="btn btn-link p-0"/>
                </div>
            </field>
        </field>
    </record>

    <!-- Add activity tags filter to partner search -->
    <record id="view_partner_search_activity_tags" model="ir.ui.view">
        <field name="name">res.partner.search.activity.tags</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <field name="category_id" position="after">
                <field name="activity_tag_ids" string="Actividad Compra"/>
            </field>
        </field>
    </record>

</odoo>
