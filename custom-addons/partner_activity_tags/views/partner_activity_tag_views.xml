<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View -->
    <record id="partner_activity_tag_view_list" model="ir.ui.view">
        <field name="name">partner.activity.tag.list</field>
        <field name="model">partner.activity.tag</field>
        <field name="arch" type="xml">
            <list string="Tags de Actividad" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="months_from"/>
                <field name="months_to"/>
                <field name="color" widget="color_picker"/>
                <field name="partner_count"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="partner_activity_tag_view_form" model="ir.ui.view">
        <field name="name">partner.activity.tag.form</field>
        <field name="model">partner.activity.tag</field>
        <field name="arch" type="xml">
            <form string="Tag de Actividad">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" placeholder="Nombre del periodo"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="months_from"/>
                            <field name="months_to"/>
                        </group>
                        <group>
                            <field name="color" widget="color_picker"/>
                            <field name="sequence"/>
                            <field name="active"/>
                            <field name="partner_count"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Clientes" name="partners">
                            <field name="partner_ids" nolabel="1">
                                <list>
                                    <field name="name"/>
                                    <field name="city"/>
                                    <field name="country_id"/>
                                    <field name="phone"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_partner_activity_tag" model="ir.actions.act_window">
        <field name="name">Tags de Actividad</field>
        <field name="res_model">partner.activity.tag</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear un tag de actividad
            </p>
            <p>
                Los tags de actividad clasifican clientes según la antigüedad
                de su última compra.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem
        id="menu_partner_activity_tag"
        name="Tags de Actividad"
        parent="contacts.menu_contacts"
        action="action_partner_activity_tag"
        sequence="11"
    />

</odoo>
