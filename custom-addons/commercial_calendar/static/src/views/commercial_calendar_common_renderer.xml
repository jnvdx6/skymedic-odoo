<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="commercial_calendar.CommercialEventIcons"
       t-inherit="calendar.AttendeeCalendarCommonRenderer.event"
       t-inherit-mode="extension">
        <xpath expr="//div[contains(@t-attf-class, 'o_event_title')]" position="inside">
            <span t-if="rawRecord.is_commercial and rawRecord.commercial_status === 'done'"
                  class="ms-1 text-success fa fa-check-circle o_commercial_icon"
                  title="Realizada"/>
            <span t-if="rawRecord.is_commercial and rawRecord.commercial_status === 'overdue'"
                  class="ms-1 text-danger fa fa-exclamation-triangle o_commercial_icon"
                  title="Vencida"/>
            <span t-if="rawRecord.is_commercial and rawRecord.commercial_feedback"
                  class="ms-1 fa fa-comment o_commercial_icon_feedback"
                  title="Con feedback"/>
        </xpath>
    </t>
</templates>
