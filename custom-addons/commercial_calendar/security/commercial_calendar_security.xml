<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Salespeople see only their own commercial events -->
        <record id="commercial_event_rule_salesman" model="ir.rule">
            <field name="name">Eventos Comerciales: comercial propio</field>
            <field name="model_id" ref="calendar.model_calendar_event"/>
            <field name="domain_force">[
                '|',
                ('is_commercial', '=', False),
                ('user_id', '=', user.id)
            ]</field>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        </record>
        <!-- Sales Managers see all commercial events -->
        <record id="commercial_event_rule_manager" model="ir.rule">
            <field name="name">Eventos Comerciales: manager todos</field>
            <field name="model_id" ref="calendar.model_calendar_event"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_manager'))]"/>
        </record>
    </data>
</odoo>
