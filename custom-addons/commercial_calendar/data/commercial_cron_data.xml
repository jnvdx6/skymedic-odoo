<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Existing: Notify overdue commercial events -->
        <record id="cron_notify_overdue_commercial" model="ir.cron">
            <field name="name">Calendario Comercial: Notificar actividades vencidas</field>
            <field name="model_id" ref="calendar.model_calendar_event"/>
            <field name="state">code</field>
            <field name="code">model._cron_notify_overdue_commercial()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall" eval="'2026-03-01 07:00:00'"/>
            <field name="active" eval="True"/>
            <field name="priority">50</field>
        </record>

        <!-- New: Daily recompute commercial scores -->
        <record id="cron_recompute_commercial_scores" model="ir.cron">
            <field name="name">Calendario Comercial: Recalcular puntuaciones comerciales</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="state">code</field>
            <field name="code">model._cron_recompute_commercial_scores()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall" eval="'2026-03-01 06:00:00'"/>
            <field name="active" eval="True"/>
            <field name="priority">60</field>
        </record>

        <!-- New: Weekly notify unvisited clients -->
        <record id="cron_notify_unvisited_clients" model="ir.cron">
            <field name="name">Calendario Comercial: Avisar clientes sin visitar</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="state">code</field>
            <field name="code">model._cron_notify_unvisited_clients()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">weeks</field>
            <field name="nextcall" eval="'2026-03-02 07:00:00'"/>
            <field name="active" eval="True"/>
            <field name="priority">70</field>
        </record>

    </data>
</odoo>
