<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Visita Comercial → Seguimiento en 7 días -->
        <record id="followup_rule_visita_seguimiento" model="commercial.followup.rule">
            <field name="name">Visita → Seguimiento (7 días)</field>
            <field name="sequence">10</field>
            <field name="trigger_activity_type_id" ref="commercial_calendar.activity_type_visita"/>
            <field name="followup_activity_type_id" ref="commercial_calendar.activity_type_seguimiento"/>
            <field name="delay_days">7</field>
            <field name="auto_create_event" eval="True"/>
            <field name="summary_template">Seguimiento visita - {partner}</field>
        </record>

        <!-- Demo → Seguimiento en 3 días -->
        <record id="followup_rule_demo_seguimiento" model="commercial.followup.rule">
            <field name="name">Demo → Seguimiento (3 días)</field>
            <field name="sequence">20</field>
            <field name="trigger_activity_type_id" ref="commercial_calendar.activity_type_demo"/>
            <field name="followup_activity_type_id" ref="commercial_calendar.activity_type_seguimiento"/>
            <field name="delay_days">3</field>
            <field name="auto_create_event" eval="True"/>
            <field name="summary_template">Seguimiento demo - {partner}</field>
        </record>

        <!-- Demo → Llamada Comercial en 14 días -->
        <record id="followup_rule_demo_llamada" model="commercial.followup.rule">
            <field name="name">Demo → Llamada (14 días)</field>
            <field name="sequence">21</field>
            <field name="trigger_activity_type_id" ref="commercial_calendar.activity_type_demo"/>
            <field name="followup_activity_type_id" ref="commercial_calendar.activity_type_llamada"/>
            <field name="delay_days">14</field>
            <field name="auto_create_event" eval="True"/>
            <field name="summary_template">Llamada post-demo - {partner}</field>
        </record>

        <!-- Formación → Seguimiento en 30 días -->
        <record id="followup_rule_formacion_seguimiento" model="commercial.followup.rule">
            <field name="name">Formación → Seguimiento (30 días)</field>
            <field name="sequence">30</field>
            <field name="trigger_activity_type_id" ref="commercial_calendar.activity_type_formacion"/>
            <field name="followup_activity_type_id" ref="commercial_calendar.activity_type_seguimiento"/>
            <field name="delay_days">30</field>
            <field name="auto_create_event" eval="True"/>
            <field name="summary_template">Seguimiento formación - {partner}</field>
        </record>

        <!-- Llamada Comercial → Seguimiento en 7 días -->
        <record id="followup_rule_llamada_seguimiento" model="commercial.followup.rule">
            <field name="name">Llamada → Seguimiento (7 días)</field>
            <field name="sequence">40</field>
            <field name="trigger_activity_type_id" ref="commercial_calendar.activity_type_llamada"/>
            <field name="followup_activity_type_id" ref="commercial_calendar.activity_type_seguimiento"/>
            <field name="delay_days">7</field>
            <field name="auto_create_event" eval="True"/>
            <field name="summary_template">Seguimiento llamada - {partner}</field>
        </record>

        <!-- Presentación → Seguimiento en 7 días -->
        <record id="followup_rule_presentacion_seguimiento" model="commercial.followup.rule">
            <field name="name">Presentación → Seguimiento (7 días)</field>
            <field name="sequence">50</field>
            <field name="trigger_activity_type_id" ref="commercial_calendar.activity_type_presentacion"/>
            <field name="followup_activity_type_id" ref="commercial_calendar.activity_type_seguimiento"/>
            <field name="delay_days">7</field>
            <field name="auto_create_event" eval="True"/>
            <field name="summary_template">Seguimiento presentación - {partner}</field>
        </record>

    </data>
</odoo>
