<?xml version="1.0"?>
<odoo>

    <!-- Commercial Calendar Action with commercial filter pre-applied -->
    <record id="action_commercial_calendar" model="ir.actions.act_window">
        <field name="name">Calendario Comercial</field>
        <field name="res_model">calendar.event</field>
        <field name="view_mode">calendar,list,form</field>
        <field name="context">{
            'search_default_commercial': 1,
            'search_default_mymeetings': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay actividades comerciales programadas.
            </p>
            <p>Programa visitas, demos, formaciones y seguimientos comerciales.</p>
        </field>
    </record>

    <!-- Menu: Mis Clientes (before Calendario) -->
    <menuitem
        id="menu_commercial_portfolio"
        name="Mis Clientes"
        parent="sale.sale_menu_root"
        action="action_commercial_portfolio"
        sequence="4"
        groups="sales_team.group_sale_salesman"/>

    <!-- Menu: Calendario Comercial -->
    <menuitem
        id="menu_commercial_calendar"
        name="Calendario Comercial"
        parent="sale.sale_menu_root"
        action="action_commercial_calendar"
        sequence="5"
        groups="sales_team.group_sale_salesman"/>

    <!-- Menu: Registro Rápido -->
    <menuitem
        id="menu_commercial_quick_log"
        name="Registro Rápido"
        parent="sale.sale_menu_root"
        action="action_commercial_quick_log"
        sequence="6"
        groups="sales_team.group_sale_salesman"/>

    <!-- Menu: Planificador de Visitas -->
    <menuitem
        id="menu_commercial_visit_planner"
        name="Planificador de Visitas"
        parent="sale.sale_menu_root"
        action="action_commercial_visit_planner"
        sequence="7"
        groups="sales_team.group_sale_salesman"/>

    <!-- Configuration submenu for followup rules -->
    <menuitem
        id="menu_commercial_config"
        name="Configuración Comercial"
        parent="sale.sale_menu_root"
        sequence="90"
        groups="sales_team.group_sale_manager"/>

    <menuitem
        id="menu_commercial_followup_rules"
        name="Reglas de Seguimiento"
        parent="menu_commercial_config"
        action="action_commercial_followup_rule"
        sequence="10"
        groups="sales_team.group_sale_manager"/>

</odoo>
