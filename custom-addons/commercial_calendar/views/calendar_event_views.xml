<?xml version="1.0"?>
<odoo>

    <!-- Extend Calendar Event Form View -->
    <record id="view_calendar_event_form_commercial" model="ir.ui.view">
        <field name="name">calendar.event.form.commercial</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
        <field name="arch" type="xml">
            <!-- Add commercial fields after location -->
            <xpath expr="//field[@name='location']" position="after">
                <field name="commercial_activity_type_id"
                    readonly="not user_can_edit"/>
                <field name="commercial_partner_id"
                    context="{'form_view_ref': 'base.view_partner_simple_form'}"
                    options="{'no_quick_create': True}"
                    readonly="not user_can_edit"/>
                <field name="is_commercial" invisible="1"/>
            </xpath>
            <!-- Add commercial feedback tab -->
            <xpath expr="//page[@name='notes']" position="after">
                <page name="commercial" string="Comercial"
                    invisible="not is_commercial">
                    <group>
                        <group>
                            <field name="commercial_status" readonly="1"
                                widget="badge"
                                decoration-danger="commercial_status == 'overdue'"
                                decoration-warning="commercial_status == 'today'"
                                decoration-success="commercial_status == 'done'"
                                decoration-info="commercial_status == 'planned'"/>
                        </group>
                        <group>
                            <field name="commercial_activity_type_id" readonly="1"
                                string="Tipo"/>
                            <field name="commercial_partner_id" readonly="1"
                                string="Contacto"/>
                        </group>
                    </group>
                    <separator string="Feedback Comercial"/>
                    <field name="commercial_feedback"
                        placeholder="A침adir feedback sobre la actividad comercial..."
                        readonly="not user_can_edit"/>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Extend Quick Create Form -->
    <record id="view_calendar_event_form_quick_create_commercial" model="ir.ui.view">
        <field name="name">calendar.event.form.quick_create.commercial</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_form_quick_create"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='privacy']/.." position="before">
                <div class="d-flex align-items-center" colspan="2">
                    <i class="fa fa-briefcase text-600" title="Tipo Comercial"/>
                    <field name="commercial_activity_type_id" nolabel="1"
                        placeholder="Tipo actividad comercial"
                        class="w-100 mb-0"/>
                </div>
                <div class="d-flex align-items-center" colspan="2">
                    <i class="fa fa-user-circle text-600" title="Contacto Comercial"/>
                    <field name="commercial_partner_id" nolabel="1"
                        placeholder="Contacto comercial"
                        class="w-100 mb-0"
                        options="{'no_quick_create': True}"/>
                </div>
            </xpath>
        </field>
    </record>

    <!-- Extend Calendar View with commercial fields -->
    <record id="view_calendar_event_calendar_commercial" model="ir.ui.view">
        <field name="name">calendar.event.calendar.commercial</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_calendar"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="commercial_activity_type_id"
                    invisible="not commercial_activity_type_id"
                    options="{'icon': 'fa fa-briefcase'}"/>
                <field name="commercial_partner_id"
                    invisible="not commercial_partner_id"
                    options="{'icon': 'fa fa-user-circle'}"/>
                <field name="commercial_status" invisible="1"/>
                <field name="is_commercial" invisible="1"/>
                <field name="commercial_feedback" invisible="1"/>
            </xpath>
        </field>
    </record>

    <!-- Extend Search View with commercial filters -->
    <record id="view_calendar_event_search_commercial" model="ir.ui.view">
        <field name="name">calendar.event.search.commercial</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_search"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='categ_ids']" position="after">
                <field name="commercial_partner_id"/>
                <field name="commercial_activity_type_id"/>
            </xpath>
            <xpath expr="//filter[@name='recurrent']" position="before">
                <separator/>
                <filter string="Actividades Comerciales" name="commercial"
                    domain="[('is_commercial', '=', True)]"/>
                <filter string="Visitas" name="visitas"
                    domain="[('commercial_activity_type_id.name', '=', 'Visita Comercial')]"/>
                <filter string="Demos" name="demos"
                    domain="[('commercial_activity_type_id.name', '=', 'Demo')]"/>
                <filter string="Formaci칩n" name="formacion"
                    domain="[('commercial_activity_type_id.name', '=', 'Formaci칩n')]"/>
                <filter string="Llamadas" name="llamadas"
                    domain="[('commercial_activity_type_id.name', '=', 'Llamada Comercial')]"/>
                <filter string="Seguimiento" name="seguimiento"
                    domain="[('commercial_activity_type_id.name', '=', 'Seguimiento')]"/>
                <filter string="Presentaciones" name="presentaciones"
                    domain="[('commercial_activity_type_id.name', '=', 'Presentaci칩n')]"/>
                <separator/>
                <filter string="Planificadas" name="status_planned"
                    domain="[('commercial_status', '=', 'planned')]"/>
                <filter string="Hoy" name="status_today"
                    domain="[('commercial_status', '=', 'today')]"/>
                <filter string="Vencidas" name="status_overdue"
                    domain="[('commercial_status', '=', 'overdue')]"/>
                <filter string="Realizadas" name="status_done"
                    domain="[('commercial_status', '=', 'done')]"/>
                <separator/>
            </xpath>
            <xpath expr="//filter[@name='responsible']" position="after">
                <filter string="Tipo Comercial" name="group_commercial_type"
                    domain="[]" context="{'group_by': 'commercial_activity_type_id'}"/>
                <filter string="Contacto Comercial" name="group_commercial_partner"
                    domain="[]" context="{'group_by': 'commercial_partner_id'}"/>
                <filter string="Estado Comercial" name="group_commercial_status"
                    domain="[]" context="{'group_by': 'commercial_status'}"/>
            </xpath>
        </field>
    </record>

    <!-- Calendar List View extension -->
    <record id="view_calendar_event_tree_commercial" model="ir.ui.view">
        <field name="name">calendar.event.list.commercial</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='location']" position="after">
                <field name="commercial_activity_type_id" optional="show"/>
                <field name="commercial_partner_id" optional="show"/>
                <field name="commercial_status" optional="show"
                    widget="badge"
                    decoration-danger="commercial_status == 'overdue'"
                    decoration-warning="commercial_status == 'today'"
                    decoration-success="commercial_status == 'done'"
                    decoration-info="commercial_status == 'planned'"/>
            </xpath>
        </field>
    </record>

</odoo>
