<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data noupdate="1">
        <record id="nacex_shipping_email_template" model="mail.template">
            <field name="name">NACEX: Notificación de envío al cliente</field>
            <field name="model_id" ref="stock.model_stock_picking" />
            <field name="email_from">{{ (object.company_id.email or object.carrier_id.company_id.email or '') }}</field>
            <field name="email_to">{{ object.partner_id.email }}</field>
            <field name="subject">Su pedido {{ object.origin or object.name }} ha sido enviado — Seguimiento NACEX</field>
            <field name="body_html" type="html">
<div style="margin:0; padding:0; font-family: Arial, Helvetica, sans-serif; font-size:14px; color:#333;">
    <table width="100%" cellpadding="0" cellspacing="0" style="max-width:600px; margin:0 auto;">
        <tr>
            <td style="background:#00529b; padding:20px; text-align:center;">
                <h1 style="color:#fff; margin:0; font-size:22px;">Su pedido ha sido enviado</h1>
            </td>
        </tr>
        <tr>
            <td style="padding:25px 20px; background:#fff; border:1px solid #ddd; border-top:none;">
                <p>Estimado/a <strong>{{ object.partner_id.name }}</strong>,</p>
                <p>Le informamos de que su pedido <strong>{{ object.origin or object.name }}</strong> ha sido enviado a través de <strong>NACEX</strong>.</p>

                <table width="100%" cellpadding="8" cellspacing="0" style="margin:15px 0; border:1px solid #e0e0e0; border-radius:4px;">
                    <tr style="background:#f7f7f7;">
                        <td style="border-bottom:1px solid #e0e0e0;"><strong>Servicio</strong></td>
                        <td style="border-bottom:1px solid #e0e0e0;">{{ ctx.get('service_label', '') }}</td>
                    </tr>
                    <tr>
                        <td style="border-bottom:1px solid #e0e0e0;"><strong>N.º seguimiento</strong></td>
                        <td style="border-bottom:1px solid #e0e0e0;">{{ ctx.get('tracking_number', '') }}</td>
                    </tr>
                    <tr style="background:#f7f7f7;">
                        <td><strong>Dirección de entrega</strong></td>
                        <td>{{ object.partner_id.street or '' }}{{ ', ' + object.partner_id.street2 if object.partner_id.street2 else '' }}<br/>{{ object.partner_id.zip or '' }} {{ object.partner_id.city or '' }}</td>
                    </tr>
                </table>

                <p style="text-align:center; margin:20px 0;">
                    <a href="{{ ctx.get('tracking_url', '#') }}"
                       style="display:inline-block; background:#00529b; color:#fff; padding:12px 30px; text-decoration:none; border-radius:5px; font-weight:bold; font-size:15px;">
                        Seguir mi envío
                    </a>
                </p>

                <p style="font-size:12px; color:#888; margin-top:20px;">
                    Si tiene alguna duda, no dude en contactarnos.
                </p>
            </td>
        </tr>
        <tr>
            <td style="padding:15px 20px; background:#f5f5f5; text-align:center; font-size:11px; color:#999; border:1px solid #ddd; border-top:none;">
                {{ object.company_id.name }} — {{ object.company_id.phone or '' }}
            </td>
        </tr>
    </table>
</div>
            </field>
            <field name="lang">{{ object.partner_id.lang }}</field>
            <field name="auto_delete" eval="True" />
        </record>
    </data>
</odoo>
