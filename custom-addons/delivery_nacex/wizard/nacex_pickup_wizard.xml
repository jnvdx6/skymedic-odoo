<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="nacex_pickup_wizard_form" model="ir.ui.view">
        <field name="name">nacex.pickup.wizard.form</field>
        <field name="model">nacex.pickup.wizard</field>
        <field name="arch" type="xml">
            <form string="Programar recogida NACEX">
                <group>
                    <group string="Datos de recogida">
                        <field name="picking_id" readonly="1" />
                        <field name="pickup_date" />
                        <field name="reco_codigo" />
                    </group>
                    <group string="Datos de agencia">
                        <field name="del_sol" />
                        <field name="num_rec" />
                        <field name="ref" />
                    </group>
                </group>
                <footer>
                    <button
                        name="action_schedule_pickup"
                        string="Programar recogida"
                        type="object"
                        class="btn btn-primary"
                    />
                    <button string="Cancelar" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
