<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="nacex_delivery_method_configuration" model="ir.ui.view">
        <field name="name">delivery.carrier.form.nacex</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='destination']" position="before">
                <page
                    string="Configuración NACEX"
                    name="nacex_configuration"
                    invisible="delivery_type != 'nacex'"
                >
                    <!-- Test mode warning -->
                    <div
                        class="alert alert-warning mb-3"
                        role="alert"
                        invisible="prod_environment"
                    >
                        <i class="fa fa-exclamation-triangle" title="Aviso" />
                        <strong> Entorno de pruebas</strong> -
                        Está usando credenciales de prueba. Cambie a
                        Entorno de Producción cuando esté listo.
                    </div>

                    <!-- Production mode info -->
                    <div
                        class="alert alert-success mb-3"
                        role="alert"
                        invisible="not prod_environment"
                    >
                        <i class="fa fa-check-circle" title="Producción" />
                        <strong> Entorno de producción</strong> -
                        Los envíos se crearán en el sistema real de NACEX.
                    </div>

                    <!-- Test connection button -->
                    <div class="mb-3">
                        <button
                            name="nacex_action_test_connection"
                            string=" Probar conexión"
                            type="object"
                            class="btn btn-primary"
                            icon="fa-plug"
                        />
                    </div>

                    <!-- Credentials -->
                    <group string="Credenciales" name="nacex_credentials">
                        <group>
                            <field
                                name="nacex_agency_code"
                                required="delivery_type == 'nacex'"
                            />
                            <field
                                name="nacex_customer_code"
                                required="delivery_type == 'nacex'"
                            />
                        </group>
                        <group />
                    </group>

                    <!-- Service configuration -->
                    <group
                        string="Configuración del servicio"
                        name="nacex_service"
                    >
                        <group>
                            <field
                                name="nacex_service_code"
                                required="delivery_type == 'nacex'"
                            />
                            <field
                                name="nacex_carriage_code"
                                required="delivery_type == 'nacex'"
                            />
                        </group>
                        <group>
                            <field
                                name="nacex_packaging_code"
                                required="delivery_type == 'nacex'"
                            />
                            <field name="nacex_min_weight" />
                        </group>
                    </group>

                    <!-- Options -->
                    <group string="Opciones" name="nacex_options">
                        <group>
                            <field name="nacex_with_return" />
                            <field name="nacex_validate_address" />
                        </group>
                        <group>
                            <field name="nacex_send_customer_email" />
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
