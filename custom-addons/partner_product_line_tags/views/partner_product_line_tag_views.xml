<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View -->
    <record id="partner_product_line_tag_view_list" model="ir.ui.view">
        <field name="name">partner.product.line.tag.list</field>
        <field name="model">partner.product.line.tag</field>
        <field name="arch" type="xml">
            <list string="Tags de Línea de Producto" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="product_match_pattern"/>
                <field name="color" widget="color_picker"/>
                <field name="partner_count"/>
                <field name="active" column_invisible="True"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="partner_product_line_tag_view_form" model="ir.ui.view">
        <field name="name">partner.product.line.tag.form</field>
        <field name="model">partner.product.line.tag</field>
        <field name="arch" type="xml">
            <form string="Tag de Línea de Producto">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" placeholder="Nombre de la línea de producto"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="product_match_pattern" placeholder="keyword1,keyword2,..."/>
                            <field name="color" widget="color_picker"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                            <field name="active"/>
                            <field name="partner_count"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Clientes" name="partners">
                            <field name="partner_ids" nolabel="1">
                                <list>
                                    <field name="name"/>
                                    <field name="city"/>
                                    <field name="country_id"/>
                                    <field name="phone"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_partner_product_line_tag" model="ir.actions.act_window">
        <field name="name">Tags de Línea de Producto</field>
        <field name="res_model">partner.product.line.tag</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear un tag de línea de producto
            </p>
            <p>
                Los tags de línea de producto clasifican clientes según
                las líneas de producto que compran.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem
        id="menu_partner_product_line_tag"
        name="Tags de Línea de Producto"
        parent="contacts.menu_contacts"
        action="action_partner_product_line_tag"
        sequence="15"
    />

</odoo>
