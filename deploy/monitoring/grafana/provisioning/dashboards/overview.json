{
  "dashboard": {
    "title": "Skymedic - Overview",
    "uid": "skymedic-overview",
    "tags": ["skymedic", "odoo"],
    "timezone": "Europe/Madrid",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Estado de servicios",
        "type": "stat",
        "gridPos": { "h": 4, "w": 24, "x": 0, "y": 0 },
        "targets": [
          {
            "expr": "up",
            "legendFormat": "{{job}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "options": {
                  "0": { "text": "DOWN", "color": "red" },
                  "1": { "text": "UP", "color": "green" }
                },
                "type": "value"
              }
            ]
          }
        }
      },
      {
        "id": 2,
        "title": "CPU %",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 8, "x": 0, "y": 4 },
        "targets": [
          {
            "expr": "100 - (avg(irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "CPU",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "max": 100,
            "min": 0,
            "thresholds": {
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 60, "color": "yellow" },
                { "value": 85, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "RAM %",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 8, "x": 8, "y": 4 },
        "targets": [
          {
            "expr": "(1 - node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes) * 100",
            "legendFormat": "RAM",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "max": 100,
            "min": 0,
            "thresholds": {
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 70, "color": "yellow" },
                { "value": 90, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Disco",
        "type": "gauge",
        "gridPos": { "h": 8, "w": 8, "x": 16, "y": 4 },
        "targets": [
          {
            "expr": "(1 - node_filesystem_avail_bytes{mountpoint=\"/\"} / node_filesystem_size_bytes{mountpoint=\"/\"}) * 100",
            "legendFormat": "/",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "max": 100,
            "min": 0,
            "thresholds": {
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 70, "color": "yellow" },
                { "value": 85, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "PG - Conexiones por BD",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
        "targets": [
          {
            "expr": "pg_stat_activity_count",
            "legendFormat": "{{datname}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 6,
        "title": "PG - Tamano BDs",
        "type": "bargauge",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
        "targets": [
          {
            "expr": "pg_database_size_bytes{datname=~\"skymedic.*\"}",
            "legendFormat": "{{datname}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": { "unit": "bytes" }
        }
      },
      {
        "id": 7,
        "title": "Docker - CPU por contenedor",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 20 },
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{name=~\"odoo.*|prometheus|grafana\"}[5m]) * 100",
            "legendFormat": "{{name}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": { "unit": "percent" }
        }
      },
      {
        "id": 8,
        "title": "Docker - Memoria por contenedor",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 20 },
        "targets": [
          {
            "expr": "container_memory_usage_bytes{name=~\"odoo.*|prometheus|grafana\"}",
            "legendFormat": "{{name}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": { "unit": "bytes" }
        }
      },
      {
        "id": 9,
        "title": "Nginx - Requests/sec",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 28 },
        "targets": [
          {
            "expr": "irate(nginx_http_requests_total[5m])",
            "legendFormat": "req/s",
            "refId": "A"
          }
        ]
      },
      {
        "id": 10,
        "title": "Nginx - Conexiones activas",
        "type": "stat",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 28 },
        "targets": [
          {
            "expr": "nginx_connections_active",
            "legendFormat": "Activas",
            "refId": "A"
          }
        ]
      },
      {
        "id": 11,
        "title": "Red - Trafico",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 36 },
        "targets": [
          {
            "expr": "irate(node_network_receive_bytes_total{device!~\"lo|veth.*|br.*|docker.*|tailscale.*\"}[5m])",
            "legendFormat": "IN {{device}}",
            "refId": "A"
          },
          {
            "expr": "irate(node_network_transmit_bytes_total{device!~\"lo|veth.*|br.*|docker.*|tailscale.*\"}[5m])",
            "legendFormat": "OUT {{device}}",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": { "unit": "Bps" }
        }
      }
    ]
  }
}
