# Odoo PRODUCTION - SSL (port 8443)
upstream odoo-prod {
    server 127.0.0.1:8069;
}
upstream odoo-prod-ws {
    server 127.0.0.1:8072;
}

server {
    listen 8443 ssl http2;
    server_name _;

    ssl_certificate     /etc/nginx/ssl/server.crt;
    ssl_certificate_key /etc/nginx/ssl/server.key;
    ssl_protocols       TLSv1.2 TLSv1.3;
    ssl_ciphers         HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;

    client_max_body_size 200M;

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;

    # Proxy headers
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto https;
    proxy_read_timeout 720s;
    proxy_connect_timeout 720s;
    proxy_send_timeout 720s;

    # Block database manager
    location ~* ^/web/database/ {
        deny all;
        return 404;
    }

    # Websocket
    location /websocket {
        proxy_pass http://odoo-prod-ws;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto https;
    }

    # Static files with cache
    location ~* /web/static/ {
        proxy_pass http://odoo-prod;
        expires 7d;
        add_header Cache-Control "public, immutable";
    }

    # Rate limiting for login
    location /web/login {
        limit_req zone=login burst=5 nodelay;
        proxy_pass http://odoo-prod;
        proxy_redirect off;
    }

    # Everything else
    location / {
        proxy_pass http://odoo-prod;
        proxy_redirect off;
    }

    gzip on;
    gzip_types text/css text/plain text/xml application/xml application/json application/javascript;
    gzip_min_length 1000;
}
