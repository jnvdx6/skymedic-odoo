<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">l10n.be.intervat.res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='default_taxes_setting_container']" position="inside">
                <setting company_dependent="1" string="Intervat" groups="account.group_account_user" invisible="country_code != 'BE'"
                         help="Submit and fetch your VAT returns via Intervat using the API.">
                    <div class="content-group">
                        <div class="d-flex flex-column mt16">
                            <div class="row gap-2">
                                <label string="Server Mode" for="l10n_be_intervat_mode" class="col-lg-4 o_light_label text-nowrap"/>
                                <field name="l10n_be_intervat_mode"/>
                                <button invisible="not l10n_be_intervat_access_token" name="action_close_intervat_connection" type="object" class="btn-link w-auto">
                                    <i title="Close connection" role="img" aria-label="Close connection" class="fa fa-fw fa-sign-out"/>
                                </button>
                            </div>
                            <div class="row gap-2" invisible="l10n_be_intervat_mode not in ('prod', 'test')">
                                <label string="VAT Number" for="l10n_be_intervat_ecb" class="col-lg-4 o_light_label"/>
                                <field name="l10n_be_intervat_ecb"/>
                            </div>
                            <div class="row gap-2">
                                <label string="Accounting Firm" for="account_representative_id" class="col-lg-4 o_light_label text-nowrap"/>
                                <field name="account_representative_id"/>
                            </div>
                        </div>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
