<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="lazada_shop_create_wizard_form" model="ir.ui.view">
        <field name="name">lazada.shop.create.wizard.form</field>
        <field name="model">lazada.shop.create.wizard</field>
        <field name="arch" type="xml">
            <form string="Create New Lazada Shop">
                <group>
                    <group>
                        <field name="company_id" readonly="1"/>
                    </group>
                </group>
                <group string="Lazada API Credentials">
                    <field name="app_key"/>
                    <field name="app_secret" password="True"/>
                </group>
                <footer>
                    <button
                        name="action_create_shop"
                        string="Connect Shop"
                        type="object"
                        class="btn-primary"
                    />
                    <button
                        string="Cancel"
                        special="cancel"
                        class="btn-secondary"
                    />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_lazada_shop_create_wizard" model="ir.actions.act_window">
        <field name="name">Create Lazada Shop</field>
        <field name="res_model">lazada.shop.create.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
