<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="lazada_item_list" model="ir.ui.view">
        <field name="name">lazada.item.list</field>
        <field name="model">lazada.item</field>
        <field name="arch" type="xml">
            <list string="Lazada Items" editable="top">
                <field name="product_id"/>
                <field
                    name="shop_id"
                    options="{'no_create': True, 'no_open': True}"
                    column_invisible="context.get('default_shop_id', False)"
                />
                <field name="lazada_sku"/>
                <field name="lazada_item_extern_id" optional="hide"/>
                <field
                    name="sync_lazada_inventory"
                    optional="show"
                    readonly="fulfillment_type != 'fbm'"
                />
                <field name="last_inventory_sync_date" optional="show"/>
            </list>
        </field>
    </record>

    <record id="lazada_item_search" model="ir.ui.view">
        <field name="name">lazada.item.search</field>
        <field name="model">lazada.item</field>
        <field name="arch" type="xml">
            <search>
                <field name="lazada_sku"/>
                <field name="product_id"/>
                <field name="lazada_item_extern_id"/>
                <field name="shop_id"/>
                <group>
                    <filter
                        string="Product"
                        name="group_by_product"
                        context="{'group_by': 'product_tmpl_id'}"
                    />
                    <filter
                        string="Lazada Shop"
                        name="group_by_shop"
                        context="{'group_by': 'shop_id'}"
                    />
                    <filter
                        string="Fulfillment Type"
                        name="group_by_fulfillment"
                        context="{'group_by': 'fulfillment_type'}"
                    />
                </group>
            </search>
        </field>
    </record>

    <record id="action_lazada_item_list" model="ir.actions.act_window">
        <field name="name">Lazada Items</field>
        <field name="res_model">lazada.item</field>
        <field name="view_mode">list</field>
        <field name="context">{'search_default_group_by_product': 1}</field>
    </record>

</odoo>
