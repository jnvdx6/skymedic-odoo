<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="esg_metric_kanban_view" model="ir.ui.view">
        <field name="name">esg.metric.kanban</field>
        <field name="model">esg.metric</field>
        <field name="inherit_id" ref="esg_csrd.esg_metric_kanban_view"/>
        <field name="arch" type="xml">
            <xpath expr="//kanban" position="inside">
                <header>
                    <button name="%(metrics_ai_generation_wizard_action)d" string="AI Suggest" type="action" display="always" class="btn btn-secondary"/>
                </header>
            </xpath>
        </field>
    </record>

    <record id="esg_metric_list_view" model="ir.ui.view">
        <field name="name">esg.metric.list</field>
        <field name="model">esg.metric</field>
        <field name="inherit_id" ref="esg_csrd.esg_metric_list_view"/>
        <field name="arch" type="xml">
            <xpath expr="//list/header" position="inside">
                <button name="%(metrics_ai_generation_wizard_action)d" string="AI Suggest" type="action" display="always" class="btn btn-secondary"/>
            </xpath>
        </field>
    </record>
</odoo>
