<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="metrics_ai_suggestion_wizard_form_view" model="ir.ui.view">
        <field name="name">metrics.ai.suggestion.wizard.form</field>
        <field name="model">metrics.ai.suggestion.wizard</field>
        <field name="arch" type="xml">
            <form>
                <field name="suggestion_line_ids">
                    <list editable="bottom" create="0" delete="0" no_open="1">
                        <field name="is_selected" nolabel="1"/>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="type"/>
                        <field name="category"/>
                        <field name="detail"/>
                    </list>
                </field>
                <footer>
                    <button string="Add" class="btn btn-primary" name="action_add_suggestions" type="object" data-hotkey="q" invisible="not has_one_or_more_selected"/>
                    <button string="Add All" class="btn btn-primary" name="action_add_suggestions" type="object" data-hotkey="q" context="{'add_all_suggestions': True}"/>
                    <button string="Close" class="btn-secondary" special="cancel" data-hotkey="x"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
