<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="metrics_ai_generation_wizard_action" model="ir.actions.act_window">
        <field name="name">About Your Company</field>
        <field name="res_model">metrics.ai.generation.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="metrics_ai_generation_wizard_form_view" model="ir.ui.view">
        <field name="name">metrics.ai.generation.wizard.form</field>
        <field name="model">metrics.ai.generation.wizard</field>
        <field name="arch" type="xml">
            <form string="About Your Company">
                <group>
                    <group>
                        <field name="company_id" groups="base.group_multi_company"/>
                        <field name="nace_id" string="Industry Sector" options="{'no_create': True}"/>
                        <field name="company_size"/>
                        <field name="revenues_value" string="Revenues"/>
                        <field name="assets_value" string="Assets"/>
                    </group>
                    <label for="core_business_description" string="Business Description" class="fw-bold"/>
                    <field name="core_business_description" placeholder="Describe the activities of your core business in a paragraphs..."/>
                </group>
                <footer>
                    <button string="Generate Metrics" class="btn btn-primary" name="action_generate_metrics" type="object" data-hotkey="q"/>
                    <button string="Discard" class="btn-secondary" special="cancel" data-hotkey="x"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
