<odoo>
    <record id="view_pos_prep_display_form_inherit_comm" model="ir.ui.view">
        <field name="name">pos.prep.display.form.inherit</field>
        <field name="model">pos.prep.display</field>
        <field name="inherit_id" ref="pos_enterprise.preparation_display_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='stages']" position="after">
                <page string="Communication">
                    <div class="o_setting_box">
                        <div class="o_setting_left_pane mt-2">
                            <field name="sms_enabled"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sms_enabled" class="me-2 mt-2"/>
                            <div class="text-muted mb-2 mt-1">
                                <span>Enable this option to send order status updates via SMS.</span>
                            </div>
                            <div class="col-6 ps-0"
                                invisible="sms_enabled == False"
                                style="display: grid; grid-template-columns: 150px 1fr; row-gap: 8px; align-items: center;">
                                <label for="sms_order_received_id" string="Order received" class="pe-2 mb-0"/>
                                <field name="sms_order_received_id" invisible="sms_enabled == False"/>
                                <label for="sms_order_ready_id" string="Order is ready" class="pe-2 mb-0"/>
                                <field name="sms_order_ready_id" invisible="sms_enabled == False"/>
                            </div>

                        </div>
                    </div>
                    <div class="o_setting_box">
                        <div class="o_setting_left_pane mt-2">
                            <field name="whatsapp_enabled"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="whatsapp_enabled" class="me-2 mt-2"/>
                            <div class="text-muted mb-2 mt-1">
                                <span>Enable this option to send order status updates via Whatsapp.</span>
                            </div>
                            <div class="col-6 ps-0"
                                invisible="whatsapp_enabled == False"
                                style="display: grid; grid-template-columns: 150px 1fr; row-gap: 8px; align-items: center;">
                                <label for="whatsapp_order_received_id" string="Order received" class="pe-2 mb-0"/>
                                <field name="whatsapp_order_received_id" invisible="whatsapp_enabled == False"/>
                                <label for="whatsapp_order_ready_id" string="Order is ready" class="pe-2 mb-0"/>
                                <field name="whatsapp_order_ready_id" invisible="whatsapp_enabled == False"/>
                            </div>

                        </div>
                    </div>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
