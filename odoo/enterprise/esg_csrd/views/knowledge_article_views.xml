<odoo>
    <record id="esg_csrd_knowledge_article_view_form" model="ir.ui.view">
        <field name="name">esg.csrd.knowledge.article.form.inherit</field>
        <field name="inherit_id" ref="knowledge.knowledge_article_view_form"/>
        <field name="model">knowledge.article</field>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <field name="inherited_esg_report_id" invisible="1" groups="esg.esg_group_manager"/> <!-- Needed for all the patches in the front-end. Not used in the templates/views.-->
            </xpath>
        </field>
    </record>
</odoo>
