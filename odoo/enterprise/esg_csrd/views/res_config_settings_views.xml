<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.esg_csrd</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form" />
            <field name="priority">40</field>
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <app data-string="ESG" string="ESG" name="esg_csrd" groups="esg.esg_group_manager">
                        <block title="ESG Reporting" name="esg_report_setting_container">
                            <setting
                                id="esg_main_company_id"
                                string="Group Reporting Company"
                                help="Select the company whose fiscal year and sustainability information will be used as reference for ESG reporting."
                            >
                                <field name="esg_main_company_id"/>
                                <div class="content-group" invisible="not esg_main_company_id">
                                    <div class="row">
                                        <label class="o_form_label col-lg-4" for="esg_fiscal_year_date_from" string="Fiscal Period"/>
                                        <field name="esg_fiscal_year_date_from" string="Fiscal Period" widget="daterange" options="{'end_date_field': 'esg_fiscal_year_date_to'}"/>
                                    </div>
                                </div>
                            </setting>
                            <setting
                                id="esg_enable_csrd_setting"
                                string="Corporate Sustainability Reporting Directive"
                                help="When enabled, ESRS metrics, double materiality assessment, stakeholder review, and the sustainability report are added."
                            >
                                <field name="group_esg_csrd_reporting"/>
                            </setting>
                        </block>
                    </app>
                </xpath>
            </field>
        </record>

        <record id="action_esg_csrd_configuration" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="context">{'module': 'esg_csrd', 'bin_size': False}</field>
        </record>

        <menuitem id="menu_esg_csrd_config" name="Settings" parent="esg.menu_esg_configuration"
            sequence="0" action="action_esg_csrd_configuration" groups="base.group_system"/>
    </data>
</odoo>
