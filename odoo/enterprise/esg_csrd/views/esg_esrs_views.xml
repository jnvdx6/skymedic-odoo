<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="esg_esrs_form_view" model="ir.ui.view">
        <field name="name">esg.esrs.form</field>
        <field name="model">esg.esrs</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="ESRS Name" widget="text" class="o_text_overflow" options="{'line_breaks': False}"/>
                            </h1>
                        </div>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="section"/>
                            <field name="dr"/>
                            <field name="category"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="esg_esrs_list_view" model="ir.ui.view">
        <field name="name">esg.esrs.list</field>
        <field name="model">esg.esrs</field>
        <field name="arch" type="xml">
            <list>
                <field name="code"/>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="esg_esrs_kanban_view" model="ir.ui.view">
        <field name="name">esg.esrs.kanban</field>
        <field name="model">esg.esrs</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="code"/>
                <templates>
                    <t t-name="card" class="flex-row">
                        <main>
                            <span class="d-flex fw-bold fs-5">
                                <t t-esc="record.code.value"/>
                            </span>
                        </main>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="esg_esrs_search_view" model="ir.ui.view">
        <field name="name">esg.esrs.search</field>
        <field name="model">esg.esrs</field>
        <field name="arch" type="xml">
            <search>
                <field name="code"/>
                <field name="name"/>
            </search>
        </field>
    </record>
</odoo>
