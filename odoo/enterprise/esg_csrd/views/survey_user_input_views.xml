<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="esg_survey_user_input_view_list" model="ir.ui.view">
        <field name="name">esg.survey.user.input.view.list</field>
        <field name="model">survey.user_input</field>
        <field name="inherit_id" ref="survey.survey_user_input_view_tree"/>
        <field name="mode">primary</field>
        <field name="priority">999</field>
        <field name="arch" type="xml">
            <xpath expr="//list" position="attributes">
                <attribute name="default_group_by">partner_id</attribute>
                <attribute name="create">0</attribute>
                <attribute name="group_create">0</attribute>
                <attribute name="group_edit">0</attribute>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="column_invisible">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>
