<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="esg_csrd_hr_report_count_rows_table">
        <tr t-foreach="rows" t-as="row">
            <td><span t-out="row['name']"/></td>
            <td><span t-out="row['r_count']"/></td>
            <td><span t-out="row['r_pct']"/></td>
            <t t-if="has_base_year">
                <td><span t-out="row['b_count']"/></td>
                <td><span t-out="row['b_pct']"/></td>
            </t>
        </tr>
    </template>

    <template id="esg_csrd_hr_report_pay_gap_rows_table">
        <tr t-foreach="rows" t-as="row">
            <td><span t-out="row['name']"/></td>
            <td><span t-out="row['male_median_hourly_salary']"/></td>
            <td><span t-out="row['female_median_hourly_salary']"/></td>
            <td><span t-out="row['pay_gap_percentage']"/></td>
        </tr>
    </template>

    <template id="esg_csrd_hr_report_country_employees_table">
        <table class="table table-bordered o_table">
            <tr>
                <td class="bg-100"><p><strong>Region / Location</strong></p></td>
                <td class="bg-100"><p><strong>Number of Employees - Reporting Year</strong></p></td>
                <td class="bg-100"><p><strong>% of Total - Reporting Year</strong></p></td>
                <t t-if="has_base_year">
                    <td class="bg-100"><p><strong>Number of Employees - Base Year</strong></p></td>
                    <td class="bg-100"><p><strong>% of Total - Base Year</strong></p></td>
                </t>
            </tr>
            <t t-call="esg_csrd_hr.esg_csrd_hr_report_count_rows_table"/>
        </table>
    </template>

    <template id="esg_csrd_hr_report_department_employees_table">
        <table class="table table-bordered o_table">
            <tr>
                <td class="bg-100"><p><strong>Job Position / Function</strong></p></td>
                <td class="bg-100"><p><strong>Number of Employees - Reporting Year</strong></p></td>
                <td class="bg-100"><p><strong>% of Total - Reporting Year</strong></p></td>
                <t t-if="has_base_year">
                    <td class="bg-100"><p><strong>Number of Employees - Base Year</strong></p></td>
                    <td class="bg-100"><p><strong>% of Total - Base Year</strong></p></td>
                </t>
            </tr>
            <t t-call="esg_csrd_hr.esg_csrd_hr_report_count_rows_table"/>
        </table>
    </template>

    <template id="esg_csrd_hr_report_type_non_employees_table">
        <table class="table table-bordered o_table">
            <tr>
                <td class="bg-100"><p><strong>Employment Type</strong></p></td>
                <td class="bg-100"><p><strong>Number of Non-Employees - Reporting Year</strong></p></td>
                <td class="bg-100"><p><strong>% of Total - Reporting Year</strong></p></td>
                <t t-if="has_base_year">
                    <td class="bg-100"><p><strong>Number of Non-Employees - Base Year</strong></p></td>
                    <td class="bg-100"><p><strong>% of Total - Base Year</strong></p></td>
                </t>
            </tr>
            <t t-call="esg_csrd_hr.esg_csrd_hr_report_count_rows_table"/>
