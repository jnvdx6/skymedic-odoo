    <template id="esg_csrd_hr_report_department_non_employees_table">
        <table class="table table-bordered o_table">
            <tr>
                <td class="bg-100"><p><strong>Region / Location</strong></p></td>
                <td class="bg-100"><p><strong>Number of Non-Employees - Reporting Year</strong></p></td>
                <td class="bg-100"><p><strong>% of Total - Reporting Year</strong></p></td>
                <t t-if="has_base_year">
