<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="l10n_fi_reports.ec_sales_list_submission_wizard_view_form" model="ir.ui.view">
            <field name="name">l10n_fi_reports.ec.sales.list.submission.wizard.form</field>
            <field name="model">l10n_fi_reports.ec.sales.list.submission.wizard</field>
            <field name="inherit_id" ref="account_reports.return_submission_wizard_form"/>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <field name="instructions" position="replace">
                    <group>
                        <group id="instructions">
                            <ol colspan="2">
                                <li>
                                    <div class="d-inline-block align-top">
                                        <span>Download the EC Sales List Statement</span><br/>
                                        <button string="Download" name="action_export_ec_sales_report" type="object" class="btn-secondary mb-1"/>
                                    </div>
                                </li>
                                <li>Log in to the <a href="https://www.ilmoitin.fi/" target="_blank">Vero Skatt</a>.</li>
                                <li>Upload the file</li>
                                <li>Validate the EC Sales List</li>
                            </ol>
                        </group>
                    </group>
                </field>
            </field>
        </record>
    </data>
</odoo>
