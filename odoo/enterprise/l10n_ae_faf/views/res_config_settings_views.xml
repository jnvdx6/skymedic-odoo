<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <block id="account_reports_settings" position="inside">
                    <setting string="Tax Agent and Agency in the Audit Files" company_dependent="1" invisible="country_code != 'AE'"
                             help="Defines the Tax Agency and Tax Agent in the United Arab Emirates Federal Tax Authority Files">
                        <group>
                            <field name="l10n_ae_tax_agency" placeholder="Leave empty if not applicable"/>
                            <field name="l10n_ae_tax_agent" placeholder="Leave empty if not applicable"/>
                        </group>
                    </setting>
                </block>
            </field>
        </record>
    </data>
</odoo>
